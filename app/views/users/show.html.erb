<div class="container px-5 px-sm-0" >
  <div class="row">
    <%= render "users/info", user:@user, book:@book_new %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opnion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @book.each do |book| %>
          <tr>
            <td>
              <%= link_to ,user_path(@user.id) %>
               <%= attachiment_image_tag @user, profile_image, fallback:"no.image.png", size:"40x40" %>
               <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>