<div class="col-md-3">
  <h2>User infomation</h2>
  <%= attachment_image_tag user, :profile_image, fallback:"no.image.png", size:"100x100" %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%= link_to"edit", edit_user_path(user) %>
  </div>

  <h2>New book</h2>
  <%= form_with model: book, local:true do |f| %>
  <h3>Title</h3>
  <%= f.text_field:title %>
  <h3>Opinion</h3>
  <%= f.text_area:body %>
  <%= f.submit"Create book" ,class:"btn btn-success"  %>
  <% end %>


</div>