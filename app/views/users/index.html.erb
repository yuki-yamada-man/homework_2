<div class= "container px-5 px-sm-0" >
  <div class="row">
    <%= render "users/info",user:@user, book:@book_new %>
    <div class="col-md-8 offset-md-1">
      <h2>Index of user</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachiment_image_tag user, :profile_image, fallback:"no.image.png", size:"40x40" %>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>